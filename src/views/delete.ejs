<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete a user</title>
    <link rel="stylesheet" type="text/css" href="/css/styles.css" />
</head>

<body>
    <!-- <%=JSON.stringify(userEdit)%> -->
    <div class="topnav">
        <a href="/">Home</a>
        <a href="/create">Create User</a>
    </div>

    <div class="form-add-new">
        <form action="/delete-user" method="post">
            <fieldset>
                <legend>Delete a user</legend>
                <div class="input-group d-none">
                    <label>Id:</label>
                    <input type="text" name="id" value="<%=userEdit.id%>" />
                </div>
                <div class="input-group">
                    <label>Are you sure you want to delete this email account:</label>
                    <input type="text" name="email" value="<%=userEdit.email%>" />
                </div>
                <div>
                    <button>Comfirm</button>
                </div>
            </fieldset>
        </form>
    </div>

</body>

</html>